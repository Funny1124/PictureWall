<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="vertical">

    <com.trio.picturewall.widget.RadiuImageView
        android:id="@+id/sim_post_imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/seraphine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:radius="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/conner_bg_gray"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sim_post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sim_post_title"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@id/sim_post_content"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/sim_post_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sim_post_content"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>